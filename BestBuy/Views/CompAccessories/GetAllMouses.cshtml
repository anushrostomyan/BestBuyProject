@model List<BestBuy.ViewModels.Accessories.MouseViewModel>

<h1 style="font-size:50px; font-family:'Baskerville Old Face'; text-align:center; background-color:aqua ">Mouses</h1>
<br />


<h1 style="font-size:50px; text-align:center; background-color:aqua "></h1>
<br />


<style>
    .ib {
        background: salmon;
        border: solid red 1px;
        display: inline;
    }

    .my_span {
        display: block;
        padding-left: 5px;
        font-size: 19px;
    }

    .column {
        -webkit-column-count: 2;
        -moz-column-count: 2;
        column-count: 2;
        -webkit-column-gap: 5px;
        -moz-column-gap: 5px;
        column-gap: 5px;
        -webkit-column-width: 10px;
        -moz-column-width: 10px;
        column-width: 10px;
        margin-bottom: 1em;
    }


    img {
        float: left;
        margin-left: 3px;
        height: 250px;
        width: 220px;
        border: 2px solid black;
    }



    clear {
        clear: left;
    }

    .bold_text {
        font-size: 23px;
        font: italic 1200;
    }
</style>
<section>
    @foreach (var mouse in Model)
    {
        <div style="border:2px solid black; border-spacing:2px 2px ; margin-bottom:1em; margin-left:2px; margin-right:3px">
            <div class="clearfix">
                <p style="font-size:15px; font-family:'Times New Roman', Times, serif; font-weight: bolder">
                    @if (mouse.ImageAsBase64 != null)
                    {
                        <img src="data:image/png;base64, @mouse.ImageAsBase64" alt="Red dot" />;
                    }
                    else
                    {
                        <img src="~/img/users/user-1.jpg" alt="" class=".ib" />;

                    }
                    <div class="column" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Product name: <i class="bold_text">@mouse.Name</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Product Brand: <i class="bold_text">@mouse.Brand</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Color: <i class="bold_text">@mouse.Color</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">ConnectivityTechnology: <i class="bold_text">@mouse.ConnectivityTechnology</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">ProductionDate: <i class="bold_text">@mouse.ProductionDate</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Price: <i class="bold_text">@mouse.Price</i> </span>
                    </div>
                        <br />
                    </p>
                    <br />
                </div>
            </div>
    }
</section>
