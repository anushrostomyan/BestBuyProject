@model List<BestBuy.ViewModels.KitchenAppliance.KettleViewModel>




<h1 style="font-size:50px; text-align:center; background-color:aqua "></h1>
<br />


<style>
    .ib {
        background: salmon;
        border: solid red 1px;
        display: inline;
    }

    .my_span {
        display: block;
        padding-left: 5px;
        font-size: 19px;
    }

    .column {
        -webkit-column-count: 2;
        -moz-column-count: 2;
        column-count: 2;
        -webkit-column-gap: 5px;
        -moz-column-gap: 5px;
        column-gap: 5px;
        -webkit-column-width: 10px;
        -moz-column-width: 10px;
        column-width: 10px;
        margin-bottom: 1em;
    }


    img {
        float: left;
        margin-left: 3px;
        height: 250px;
        width: 220px;
        border: 2px solid black;
    }



    clear {
        clear: left;
    }

    .bold_text {
        font-size: 23px;
        font: italic 1200;
    }
</style>
<section>
    @foreach (var kettle in Model)
    {
        <div style="border:2px solid black; border-spacing:2px 2px ; margin-bottom:1em; margin-left:2px; margin-right:3px">
            <div class="clearfix">
                <p style="font-size:15px; font-family:'Times New Roman', Times, serif; font-weight: bolder">
                    @if (kettle.ImageAsBase64 != null)
                    {
                        <img src="data:image/png;base64, @kettle.ImageAsBase64" alt="Red dot" />;
                    }
                    else
                    {
                        <img src="~/img/users/user-1.jpg" alt="" class=".ib" />;

                    }
                    <div class="column" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Product name: <i class="bold_text">@kettle.KettleModel</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Product Power: <i class="bold_text">@kettle.KettlePower</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Volume: <i class="bold_text">@kettle.KettleVolme</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Filter: <i class="bold_text">@kettle.KettleFilter</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Color: <i class="bold_text">@kettle.KettleColor</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Date: <i class="bold_text">@kettle.KettleDate</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Price: <i class="bold_text">@kettle.KettlePrice</i> </span>
                    </div>
                    <div class="my_span" style="border:2px solid black; border-spacing:2px 2px;margin:1px 3px 1em 230px">

                        <span class="my_span">Availability: <i class="bold_text">@kettle.KettleAvailability</i> </span>
                    </div>
                    
                    <br />
                </p>
                <br />
            </div>
        </div>
    }
</section>
